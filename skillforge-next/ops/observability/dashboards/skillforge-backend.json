{
  "uid": "skillforge-backend",
  "title": "SkillForge Backend",
  "tags": ["skillforge", "backend"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(skillforge_http_requests_total[1m]))",
          "legendFormat": "rps",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(skillforge_http_requests_total{status=~\"5..\"}[1m]))",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency P95 (ms)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(skillforge_http_request_duration_ms_bucket[5m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    }
  ]
}
